{
  "type": "module",
  "packageManager": "yarn@3.4.1",
  "repository": "git@github.com:asaidimu/docker-ctx.git",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "yarn clean",
    "build": "yarn tsc",
    "build:watch": "yarn build --watch",
    "build:dist": "./bin/dist.sh",
    "build:next": "./bin/next.sh",
    "build:types": "./bin/types.sh",
    "ci": "yarn install --immutable-cache --immutable",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@yarnpkg/cli": "^4.0.0-rc.39",
    "@yarnpkg/core": "^4.0.0-rc.39",
    "globby": "^13.1.3",
    "mississippi": "^4.0.0",
    "tar": "^6.1.13",
    "yargs": "^17.7.0"
  },
  "devDependencies": {
    "@types/node": "^18.14.0",
    "@types/yargs": "^17.0.22",
    "typescript": "^4.9.5"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "dist.package.json"
          ],
          "message": "chore(release): Release v${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
