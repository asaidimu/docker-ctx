{
    "compilerOptions": {
        "strict": true,
        "incremental": true,
        "allowJs": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "nodenext",
        "lib": ["esnext"],
        "rootDirs": ["src", "dist"],
        "outDir": "./dist"
    },
    "include": ["src/**/*", "./index.ts", "test/**/*"],
    "exclude": ["node_modules", "./test/fixtures/**/*"]
}
